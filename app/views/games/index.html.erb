<h1>Listing games</h1>

<table style="text-align: center;">
  <thead>
    <tr>
      <th>Player One</th>
      <th>Score</th>
      <th>Player Two</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.match.playerone.first_name %> <%= game.match.playerone.last_name %></td>
        <td><%= game.player_one_score %></td>
        <td><%= game.match.playertwo.first_name %> <%= game.match.playertwo.last_name %></td>
        <td><%= game.player_two_score %></td>
        <td><%= link_to 'Show', league_match_games_path() %></td>
        <td><%= link_to 'Edit', edit_league_match_game_path(:league_id, :match_id, game.id) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

