<%= form_for(@game, url: league_match_games_path) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :player_one_id, value: @gameinfo.player_one %>
  <%= f.hidden_field :player_two_id, value: @gameinfo.player_two %>
<table>
  <tr>
    <td>
      <%= f.label :player_one_score, @gameinfo.playerone.first_name + " " + @gameinfo.playerone.last_name %><br />
      <%= f.number_field :player_one_score %>
    </td>
    <td>
      <%= f.label :player_two_score, @gameinfo.playertwo.first_name + " " + @gameinfo.playertwo.last_name %><br />
      <%= f.number_field :player_two_score %>
    </td>
  </tr>
  <tr>
    <td colspan="2" class="submit-btn"><%= f.hidden_field :match_id, value: @gameinfo.id %><%= f.submit %>
    </td>
  </tr>
</table>

<% end %>
